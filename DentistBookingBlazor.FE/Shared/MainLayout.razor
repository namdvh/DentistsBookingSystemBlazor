    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@400;500&display=swap" rel="stylesheet">
    <link rel="shortcut icon" href="assets/images/fav.jpg">
    <link rel="stylesheet" href="assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="assets/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="assets/css/style.css" />

    <style>
        .dropdown {
            position: relative;
            margin-left:1rem;
        }

            .dropdown:hover .dropdown-list {
                display: flex;
            }

        .dropdown-list {
            padding: 0.5rem 0;
            position: absolute;
            inset: 0;
            top: 100%;
            left: 0;
            width: 100%;
            min-width: 10rem;
            background: white;
            height: fit-content;
            display: none;
            flex-direction: column;
            box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
            transform: translateX(calc(-50% + 40px)) translateY(0.5rem);
            border-radius: 12px;
            z-index: 999;
        }

            .dropdown-list::before {
                content: '';
                position: absolute;
                inset: 0;
                top: -0.5rem;
                width: 100%;
                height: 0.5rem;
            }

            .dropdown-list::after {
                content: '';
                position: absolute;
                top: 0;
                left: 35%;
                margin-left: -15px;
                margin-top: -15px;
                width: 0;
                z-index: 1;
                height: 0;
                border-bottom: solid 15px #FFF;
                border-left: solid 15px transparent;
                border-right: solid 15px transparent;
            }

            .dropdown-list > * {
                padding: 1rem;
                display: block;
                margin-left: 0 !important;
            }

                .dropdown-list > *:hover {
                    background: #dedede;
                    cursor: pointer;
                }

        .blazored-toast-container {
            z-index: 999 !important;
        }
    </style>
</head>

<link rel="stylesheet" href="./MainLayout.css" />
<BlazoredToasts Position="ToastPosition.TopRight" Timeout="5" IconType="IconType.FontAwesome" ErrorIcon="fa fa-times"
                InfoIcon="fa fa-info" SuccessIcon="fa fa-check" WarningIcon="fa fa-exclamation" />
<div class="page" id="page" style="background: transparent; min-height: 100vh;">
    <div class="sidebar">
        <NavMenu />
    </div>

    <div class="main">
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
