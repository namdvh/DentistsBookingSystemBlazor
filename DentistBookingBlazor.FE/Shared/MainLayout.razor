                        Hello, @context.User.Identity.Name
                        <div class="dropdown-list">
                            <a href="/Logout">Logout</a>
                            <a href="/Register">Register</a>
                        </div>
                    </div>
                     <div class="dropdown">
                         Booking
                        <div class="dropdown-list">
                            <a href="/bookingCreate">Create Booking</a>
                            <a href="/userHistory">Booking Detail</a>
                        </div>
                    </div>
                    <div class="dropdown">
                         Booking for Dentist
                        <div class="dropdown-list">
                            <a href="/bookingD">Booking Detail</a>
                        </div>
                    </div>
                </Authorized>
                <NotAuthorized>
                    <a href="/Register">Register</a>
                    <a href="/Login" class="ml-md-auto">Login</a>
                </NotAuthorized>
            </AuthorizeView>
            <a href="http://blazor.net" target="_blank" class="ml-md-auto">About</a>
        </div>

        <div class="content" style="margin-top: 0rem">
            <AuthorizeView>
                <Authorized>
                    @Body
                </Authorized>
                <NotAuthorized>
                    @Body
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </div>
</div>
