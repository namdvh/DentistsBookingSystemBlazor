@page "/register"
@using DentistBooking.Data.Enum

@if (ShowRegistrationErrors)
{
    <div class="alert alert-danger" role="alert">
        @foreach (var error in Message)
        {
            <p>@error</p>
        }
    </div>
}


<div class="main">

    <section class="signup">
        <!-- <img src="images/signup-bg.jpg" alt=""> -->
        <div class="container">
            <div class="signup-content">
                <EditForm Model="registerRequest" OnValidSubmit="Registers">
                    <h2 class="form-title">Create account</h2>
                    <div class="form-group">
                        <InputText id="username" class="form-control" @bind-Value="registerRequest.UserName" placeholder="User name"></InputText>
                        <ValidationMessage For="@(() => registerRequest.UserName)" />
                    </div>
                    <div class="form-group">
                        <InputText id="password" type="password" class="form-control" @bind-Value="registerRequest.Password" placeholder="Password"></InputText>
                        <ValidationMessage For="@(() => registerRequest.Password)" />
                    </div>
                    <div class="form-group">
                        <InputText id="confirm" type="password" class="form-control" @bind-Value="registerRequest.ConfirmPassword" placeholder="Confirm Password"></InputText>
                        <ValidationMessage For="@(() => registerRequest.ConfirmPassword)" />
                    </div>
                    <div class="form-group">
                        <InputText id="email" class="form-control" @bind-Value="registerRequest.Email" placeholder="Email"></InputText>
                        <ValidationMessage For="@(() => registerRequest.Email)" />
                    </div>
                    <div class="form-group">
                        <InputText id="firstname" class="form-control" @bind-Value="registerRequest.FirstName" placeholder="First Name"></InputText>
                        <ValidationMessage For="@(() => registerRequest.FirstName)" />
                    </div>
                    <div class="form-group">
                        <InputText id="lastname" class="form-control" @bind-Value="registerRequest.LastName" placeholder="Last Name"></InputText>
                        <ValidationMessage For="@(() => registerRequest.LastName)" />
                    </div>

                    <div class="form-group">
                        <InputText id="phone" type="number" class="form-control" @bind-Value="registerRequest.PhoneNumber" placeholder="Phone Number"></InputText>
                        <ValidationMessage For="@(() => registerRequest.PhoneNumber)" />
                    </div>

                    <div class="form-group">
                        <InputDate id="dob" class="form-control" asp-for="@registerRequest.DOB" @bind-Value="registerRequest.DOB" placeholder="Date of Birth"></InputDate>
                        <ValidationMessage For="@(() => registerRequest.DOB)" />
                    </div>
                    <div class="form-group">
                        <InputSelect class="form-control" @bind-Value="registerRequest.Gender">
                            <option>Select a priority</option>
                            @foreach (string item in Enum.GetNames(typeof(Gender)))
                            {
                                <option value="@item">@item</option>
                            }
                        </InputSelect>
                        <ValidationMessage For="()=>registerRequest.Gender"></ValidationMessage>
                        <small id="nameHelp" class="form-text text-muted">Choose a gender which you want.</small>
                    </div>
                    @*<button type="submit" class="btn btn-primary">Register</button>*@
                    <input type="submit" name="submit" id="submit" class="form-submit" value="Sign up" />
                </EditForm>
                <p class="loginhere">
                    Have already an account ? <a href="#" class="loginhere-link">Login here</a>
                </p>
            </div>
        </div>
    </section>

</div>











